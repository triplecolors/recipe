    <!-- Resource 태그 추가하기 -->
    <!-- 
    	name : 사용할 자원의 이름 
		auth : (Application / Container) 
				데이터 베이스의 연결을 누가 관리할 것인지 정의함. 
				Application : 별도의 프로그램
				Container : WAS 자신이 직접 관리함
		type : DataSource, 데이터베이스 연결 속성을 통합 관리하는 객체
		maxTotal : 동시 접속자 수 (제한없음 : -1)
		maxIdle : 기억할 접속자 수 ( . . )
		maxWailMillis : 대기시간
				  
    -->
   <!-- 
   		String str = "안녕";
   		DataSource oracleDB = new DataSource();
    -->
   
   <Resource name="Recipe" auth="Container" 
		   type="javax.sql.DataSource" 
		   maxTotal="20" maxIdle="5" 
		   maxWaitMillis="100000" 
		   driverClassName="oracle.jdbc.OracleDriver" 
		   url="jdbc:oracle:thin:@localhost:1521:XE" 
		   username="RECIPE" 
		   password="RECIPE"/>
</Context>